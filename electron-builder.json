{
    "productName": "AGLight",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!hardware/",
        "!screenshots/",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!.angular-cli.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "extraResources": [
        "src/assets/icons/favicon.png"
    ],
    "win": {
        "icon": "dist/assets/icons",
        "target": [
            "nsis"
        ],
        "publish": ["github"]
    },
    "mac": {
        "icon": "dist/assets/icons",
        "target": [
            "dmg"
        ],
        "publish": ["github"]
    },
    "linux": {
        "icon": "dist/assets/icons",
        "target": [
            "AppImage"
        ],
        "publish": ["github"]
    }
}